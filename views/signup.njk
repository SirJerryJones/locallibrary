{% extends "./template.njk" %} 

{% block content %}
    <main class="mx-auto flex min-h-screen w-full items-center justify-center bg-gray-900 text-white">
        <!-- component -->
        <form action="/login" method="POST">
            <section class="flex w-[30rem] flex-col space-y-10">
                <div class="w-full m-0" role="img" aria-label="Local Library Logo">
                    <img class="w-10 h-10 md:w-24 md:h-auto md:rounded-none rounded-full mx-auto" src="/images/logo.webp" alt="Local Library" />
                </div>
                <div class="text-center text-4xl font-medium">Sign up</div>

                <div class="flex flex-col md:flex-row w-full`">
                    <div class="w-full md:w-1/2 mr-1 transform border-b-2 bg-transparent text-lg duration-300 focus-within:border-indigo-500">
                        <input type="text"
                            name="firstName"
                            placeholder="First Name"
                            class="w-full border-none bg-transparent outline-none placeholder:italic focus:outline-none" />
                    </div>
                    <div class="w-full md:w-1/2 ml-1 transform border-b-2 bg-transparent text-lg duration-300 focus-within:border-indigo-500">
                        <input type="text"
                            name="lastName"
                            placeholder="Last Name"
                            class="w-full border-none bg-transparent outline-none placeholder:italic focus:outline-none" />
                    </div>
                </div>

                <div class="w-full transform border-b-2 bg-transparent text-lg duration-300 focus-within:border-indigo-500">
                    <input type="text"
                           name="email"
                           value="user@domain.com"
                           placeholder="Email or Username"
                           class="w-full border-none bg-transparent outline-none placeholder:italic focus:outline-none" />
                </div>

                <div class="w-full transform border-b-2 bg-transparent text-lg duration-300 focus-within:border-indigo-500">
                    <input type="password"
                           name="password"
                           value="password"
                           placeholder="Password"
                           class="w-full border-none bg-transparent outline-none placeholder:italic focus:outline-none" />
                </div>

                <input type="submit" value="SIGN UP" class="transform rounded-sm bg-indigo-600 py-2 font-bold duration-300 hover:bg-indigo-400">

                <p class="text-center text-lg">
                    Already regitered?
                    <a href="./"
                       class="font-medium text-indigo-500 underline-offset-4 hover:underline">Sign In</a>
                </p>
            </section>
        </form>
    </main>
{% endblock %}
